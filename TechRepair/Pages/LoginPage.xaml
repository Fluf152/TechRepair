<Page x:Class="TechRepair.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TechRepair.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="White">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Авторизация" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBox x:Name="LoginTextBox" Margin="5" Padding="5"/>
            <PasswordBox x:Name="PasswordBox" Margin="5" Padding="5"/>
            <Button x:Name="LoginButton" Content="Войти" Margin="5" Padding="5" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
